{
  "name": "@sylphx/solid-tui-markdown",
  "version": "0.0.0",
  "description": "Markdown rendering components for solid-tui: Markdown parser and SyntaxHighlight",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/solid-tui.git"
  },
  "homepage": "https://solid-tui.sylphx.com",
  "bugs": {
    "url": "https://github.com/SylphxAI/solid-tui/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "example:markdown": "tsx examples/markdown.tsx",
    "example:syntax": "tsx examples/syntax-highlight.tsx"
  },
  "keywords": [
    "solidjs",
    "terminal",
    "cli",
    "tui",
    "markdown",
    "syntax",
    "highlight",
    "code"
  ],
  "dependencies": {
    "@sylphx/solid-tui": "workspace:*",
    "chalk": "^5.3.0",
    "marked": "^11.0.0",
    "highlight.js": "^11.9.0",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
