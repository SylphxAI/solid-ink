{
  "name": "@sylphx/solid-tui-components",
  "version": "0.1.3",
  "description": "UI components for solid-tui: ProgressBar, Table, Divider, Link, TitledBox, and more",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/solid-tui.git"
  },
  "homepage": "https://solid-tui.sylphx.com",
  "bugs": {
    "url": "https://github.com/SylphxAI/solid-tui/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "example:progress": "tsx examples/progress-bar.tsx",
    "example:table": "tsx examples/table.tsx",
    "example:divider": "tsx examples/divider.tsx",
    "example:link": "tsx examples/link.tsx",
    "example:titled": "tsx examples/titled-box.tsx"
  },
  "keywords": [
    "solidjs",
    "terminal",
    "cli",
    "tui",
    "components",
    "progress",
    "table",
    "ui"
  ],
  "dependencies": {
    "@sylphx/solid-tui": "^1.0.1",
    "chalk": "^5.3.0",
    "solid-js": "^1.8.0",
    "string-width": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
