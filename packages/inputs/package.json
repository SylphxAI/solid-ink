{
  "name": "@sylphx/solid-tui-inputs",
  "version": "0.1.5",
  "description": "Input components for solid-tui: TextInput, SelectInput, ConfirmInput, and more",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/solid-tui.git"
  },
  "homepage": "https://solid-tui.sylphx.com",
  "bugs": {
    "url": "https://github.com/SylphxAI/solid-tui/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "example:text": "tsx examples/text-input.tsx",
    "example:select": "tsx examples/select-input.tsx",
    "example:confirm": "tsx examples/confirm-input.tsx",
    "example:multi": "tsx examples/multi-select.tsx",
    "example:search": "tsx examples/quick-search.tsx"
  },
  "keywords": [
    "solidjs",
    "terminal",
    "cli",
    "tui",
    "input",
    "select",
    "form",
    "prompt"
  ],
  "dependencies": {
    "@sylphx/solid-tui": "^1.0.2",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
