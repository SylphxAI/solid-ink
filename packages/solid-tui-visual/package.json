{
  "name": "@sylphx/solid-tui-visual",
  "version": "0.1.0",
  "description": "Visual effects components for solid-tui: Gradient, BigText, Chart, and more",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/solid-tui.git"
  },
  "homepage": "https://solid-tui.sylphx.com",
  "bugs": {
    "url": "https://github.com/SylphxAI/solid-tui/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "example:gradient": "tsx examples/gradient.tsx",
    "example:bigtext": "tsx examples/bigtext.tsx",
    "example:chart": "tsx examples/chart.tsx"
  },
  "keywords": [
    "solidjs",
    "terminal",
    "cli",
    "tui",
    "gradient",
    "bigtext",
    "chart",
    "visual",
    "effects"
  ],
  "dependencies": {
    "@sylphx/solid-tui": "workspace:*",
    "chalk": "^5.3.0",
    "gradient-string": "^2.0.2",
    "figlet": "^1.7.0",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.5",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
