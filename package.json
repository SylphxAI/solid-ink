{
  "name": "@sylphx/solid-ink",
  "version": "1.0.0",
  "description": "SolidJS renderer for terminal/CLI applications with fine-grained reactivity",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/solid-ink.git"
  },
  "homepage": "https://solid-ink.sylphx.com",
  "bugs": {
    "url": "https://github.com/SylphxAI/solid-ink/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "example:basic": "tsx examples/basic.tsx",
    "example:layout": "tsx examples/layout.tsx",
    "example:interactive": "tsx examples/interactive.tsx",
    "example:spinner": "tsx examples/spinner.tsx",
    "example:dashboard": "tsx examples/dashboard.tsx",
    "example:performance": "tsx examples/performance.tsx",
    "example:reactivity": "tsx examples/explain-reactivity.tsx",
    "bench:react": "cd benchmark && npm run bench:react",
    "bench:solid": "cd benchmark && npm run bench:solid",
    "bench:both": "cd benchmark && npm run bench:react && npm run bench:solid",
    "bench:compare": "cd benchmark && npm run bench:compare",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview"
  },
  "keywords": [
    "solidjs",
    "terminal",
    "cli",
    "ink",
    "tui",
    "reactive",
    "fine-grained"
  ],
  "dependencies": {
    "ansi-escapes": "^6.2.0",
    "chalk": "^5.3.0",
    "cli-cursor": "^4.0.0",
    "slice-ansi": "^7.1.0",
    "solid-js": "^1.8.0",
    "string-width": "^7.0.0",
    "yoga-layout": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
